<!-- airspace-gmaps.js -->
{{define "paths"}}{{range .}} { lat: {{.Lat}}, lng: {{.Lng}} }, {{end}}{{end}}

function createAirspace() {
{{ range $f := .airspace}} {{- range $v := .Geometry  }}
{{- if lt .Lower 5000.0}} {{- if .ClearanceRequired }}
    {{- if .Polygon.Points }}
    new google.maps.Polygon({   // {{.ID}} - {{.Name}} ({{$f.Type}}, {{.Class}}, {{.Lower}})
        map: map,
        fillColor: "red",
        fillOpacity: 0.10,
        strokeColor: "blue",
        strokeOpacity: 0.8,
        strokeWeight: 2,
        paths: [ {{ template "paths" .Polygon.Points }} ],
    });
    {{- end}}
    {{- if .Circle.Radius }}
    new google.maps.Circle({   // {{.ID}} - {{.Name}} ({{$f.Type}}, {{.Class}}, {{.Lower}})
          strokeColor: "blue",
          strokeOpacity: 0.8,
          strokeWeight: 2,
          fillColor: "red",
          fillOpacity: 0.15,
          map: map,
          center: { lat: {{.Circle.Centre.Lat}}, lng: {{.Circle.Centre.Lng}} },
          radius: {{.Circle.Radius}},
        });
    {{- end -}}
{{end}}{{end -}}
{{end}}{{end}}
}